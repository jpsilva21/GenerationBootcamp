import java.util.Scanner;

public class EXERCICIO4 {

	public static void main(String[]args) {
		
		Scanner read = new Scanner(System.in);
		
		double A, B, C, R, S, D;
		
		System.out.print("Insira um número inteiro positivo A: ");
		A = read.nextInt();
		
		System.out.print("\nInsira um número inteiro positivo B: ");
		B = read.nextInt();
		
		System.out.print("\nInsira um número inteiro positivo C: ");
		C = read.nextInt();

		R= Math.pow(A+B, 2.0);
		S= Math.pow(B+C, 2.0);
		D= (R+S)/2;

		System.out.print("\nD é: "+ D);
		
		read.close();
	}
}